<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Dashboard"
    android:background="@drawable/home_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/leftGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp"/>

    <LinearLayout
        android:id="@+id/date_bar_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/rightGuideline"
        android:layout_marginTop="50dp"
        android:background="@drawable/date_bar_bg">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            android:src="@drawable/ic_calendar"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="4dp"
            android:text="Mon, Jul 12th, 2024"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="13sp" />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/currentStatusLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@+id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@+id/date_bar_ll">



        <TextView
            android:id="@+id/UserGreeting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Good Morning, Aakash Khamari"
            android:textColor="#858484"
            android:textSize="20sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/currentStatusTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginTop="5dp"
            android:text="You are clocked in"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08:30 am"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular" />

    </LinearLayout>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="6dp"
        android:src="@drawable/ic_stopwatch"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toTopOf="@+id/currentStatusLL"
        app:layout_constraintBottom_toBottomOf="@+id/currentStatusLL"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusChangeCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintStart_toEndOf="@+id/rightGuideline"
        app:layout_constraintTop_toBottomOf="@+id/currentStatusLL">

        <TextView
            android:id="@+id/clockInBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_background_selected_bg"
            android:clickable="true"
            android:text="Clock In"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TakeABreakBtn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_background_selected_bg"
            android:clickable="true"
            android:text="Take a break"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/clockOutBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/clockOutBtn"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_background_unselected_bg"
            android:clickable="true"
            android:text="Clock Out"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/TakeABreakBtn"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/workHourCv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardElevation="6dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/rightGuideline"
        app:layout_constraintEnd_toStartOf="@+id/leftGuideline"
        app:layout_constraintTop_toBottomOf="@+id/statusChangeCL">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <ImageView
                android:id="@+id/workingHourImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_briefcase"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total working hours"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/workingHourImg"
                app:layout_constraintTop_toTopOf="@+id/workingHourImg"
                app:layout_constraintBottom_toBottomOf="@id/workingHourImg"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workingHourImg">

                <LinearLayout
                    android:id="@+id/TotalWorkHourLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toStartOf="@+id/verticalDivider"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/TotalWorkHourToday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Today"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/TotalWorkHourDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="00:00Hrs"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>

                <!-- Vertical Line Divider -->
                <View
                    android:id="@+id/verticalDivider"
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="@color/grey"
                    app:layout_constraintBottom_toBottomOf="@id/TotalWorkHourLL"
                    app:layout_constraintEnd_toStartOf="@+id/TotalBreakHourLL"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/TotalWorkHourLL"
                    app:layout_constraintTop_toTopOf="@id/TotalWorkHourLL" />

                <LinearLayout
                    android:id="@+id/TotalBreakHourLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/TotalWorkHourLL"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/verticalDivider"
                    app:layout_constraintTop_toTopOf="@id/TotalWorkHourLL">

                    <TextView
                        android:id="@+id/TotlaBreakHourTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Break hours"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/currentWorkHourDisplay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="00:00Hrs"
                        android:textColor="@color/black"
                        android:textSize="20sp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/workHourCv"
            app:layout_constraintBottom_toBottomOf="parent"
            android:backgroundTint="@color/white">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/rightGuideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="15dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/leftGuideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp"/>

            <TextView
                android:id="@+id/recentActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Activity"
                android:textSize="20sp"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/rightGuideline2"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="See more"
                android:textSize="15sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/grey"
                app:layout_constraintEnd_toStartOf="@id/leftGuideline2"
                app:layout_constraintTop_toTopOf="@id/recentActivity"
                app:layout_constraintBottom_toBottomOf="@id/recentActivity"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logCard1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@id/leftGuideline2"
                app:layout_constraintStart_toEndOf="@id/rightGuideline2"
                app:layout_constraintTop_toBottomOf="@id/recentActivity">

                <ImageView
                    android:id="@+id/clock_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_clock_out"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Clock Out"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/date_txt"
                    app:layout_constraintStart_toEndOf="@+id/clock_img"
                    app:layout_constraintTop_toTopOf="@+id/clock_img" />

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="12 Jul 2024"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/clock_img"
                    app:layout_constraintStart_toEndOf="@+id/clock_img"
                    app:layout_constraintTop_toBottomOf="@+id/Status_txt" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="01:15 pm"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Status_txt"
                    app:layout_constraintBottom_toBottomOf="@id/date_txt"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logCard2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@id/leftGuideline2"
                app:layout_constraintStart_toEndOf="@id/rightGuideline2"
                app:layout_constraintTop_toBottomOf="@id/logCard1">

                <ImageView
                    android:id="@+id/clock_img2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_clock_in"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Status_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Clock In"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/date_txt2"
                    app:layout_constraintStart_toEndOf="@+id/clock_img2"
                    app:layout_constraintTop_toTopOf="@+id/clock_img2" />

                <TextView
                    android:id="@+id/date_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="12 Jul 2024"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/clock_img2"
                    app:layout_constraintStart_toEndOf="@+id/clock_img2"
                    app:layout_constraintTop_toBottomOf="@+id/Status_txt2" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="09:15 am"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Status_txt2"
                    app:layout_constraintBottom_toBottomOf="@id/date_txt2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logCard3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@id/leftGuideline2"
                app:layout_constraintStart_toEndOf="@id/rightGuideline2"
                app:layout_constraintTop_toBottomOf="@id/logCard2">

                <ImageView
                    android:id="@+id/clock_img3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_clock_out"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Status_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Clock Out"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/date_txt3"
                    app:layout_constraintStart_toEndOf="@+id/clock_img3"
                    app:layout_constraintTop_toTopOf="@+id/clock_img3" />

                <TextView
                    android:id="@+id/date_txt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="11 Jul 2024"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/clock_img3"
                    app:layout_constraintStart_toEndOf="@+id/clock_img3"
                    app:layout_constraintTop_toBottomOf="@+id/Status_txt3" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="03:00 pm"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Status_txt3"
                    app:layout_constraintBottom_toBottomOf="@id/date_txt3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/logCard4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toStartOf="@id/leftGuideline2"
                app:layout_constraintStart_toEndOf="@id/rightGuideline2"
                app:layout_constraintTop_toBottomOf="@id/logCard3">

                <ImageView
                    android:id="@+id/clock_img4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_clock_in"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Status_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Clock In"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toTopOf="@id/date_txt4"
                    app:layout_constraintStart_toEndOf="@+id/clock_img4"
                    app:layout_constraintTop_toTopOf="@+id/clock_img4" />

                <TextView
                    android:id="@+id/date_txt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="11 Jul 2024"
                    android:textColor="@color/grey"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/clock_img4"
                    app:layout_constraintStart_toEndOf="@+id/clock_img4"
                    app:layout_constraintTop_toBottomOf="@+id/Status_txt4" />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="09:15 am"
                    android:gravity="center|end"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/Status_txt4"
                    app:layout_constraintBottom_toBottomOf="@id/date_txt4"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>